<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetminderApp.Reminder" 
             xmlns:local="clr-namespace:PetminderApp">

    <ContentPage.Content >
        <StackLayout Margin= "0,20,80,20">
            <Image Source="{local:ImageResource 
                       PetminderApp.Images.Logo.png}" 
                       HeightRequest="100" WidthRequest="400" 
                       Margin="0,50,0,50" />
           
            <Expander>
                <Expander.Header>
                    <Label Text="Current Reminders"  FontSize="20" />
                </Expander.Header>


            </Expander>

           
            <Entry x:Name="VetAptOliver"></Entry>
            <Entry Text="Vet Apt Oliver" FontSize="14"></Entry>
            <Entry Text="Kora grooming" FontSize="14"></Entry>
            <Entry Text="Play Date" FontSize="14"></Entry>


            <Image Source="{local:ImageResource 
                       PetminderApp.Images.Submit.png}" 
                       HeightRequest="40" WidthRequest="40" 
                       Margin="0,50,0,50" />
        </StackLayout>
            
    </ContentPage.Content>
        
</ContentPage>