<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetminderApp.HomeScreen">
    <ContentPage.Content>
        <StackLayout>

            <Frame BackgroundColor="#f4f4f4" Padding="24" CornerRadius="0">
                <Label Text="Logo Logo Here" HorizontalTextAlignment="Center" TextColor="#333333" FontSize="36"/>
            </Frame>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="250" />
                    <RowDefinition Height="250" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button BackgroundColor="#2885be" Grid.Row="0" Grid.Column="0" Text="Button 0,0" TextColor="White" />
                <Button BackgroundColor="#fdd982" Grid.Row="0" Grid.Column="1" Text="Button 0,1" TextColor="White" />
                <Button BackgroundColor="#ff634d" Grid.Row="1" Grid.Column="0" Text="Button 1,0" TextColor="White" />
                <Button BackgroundColor="#95d2ba" Grid.Row="1" Grid.Column="1" Text="Button 1,1" TextColor="White" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>