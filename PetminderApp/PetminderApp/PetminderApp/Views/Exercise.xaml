<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetminderApp.Views.Exercise">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblStopwatch" FontSize="50"
                   HorizontalOptions="CenterAndExpand" 
                   VerticalOptions="CenterAndExpand">
            </Label>
            <Button x:Name="btnStart" Clicked="btnStart_Clicked" Text="Start"></Button>
            <Button x:Name="btnPause" Clicked="btnPause_Clicked" Text="Pause"></Button>
            <Button x:Name="btnStop"  Clicked="btnStop_Clicked" Text="Stop"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>